<!DOCTYPE hibernate-configuration PUBLIC   
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
	
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/neoescoladb</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		
		<property name="hibernate.connection.username">neoescola</property>
		<property name="hibernate.connection.password">123456</property>
	 
		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		
		
		
		<!-- ENTIDADES -->
		<mapping class="br.com.nce.neoescola.banco.entidades.Contrato" />
		<mapping class="br.com.nce.neoescola.banco.entidades.Escola" />
		<mapping class="br.com.nce.neoescola.banco.entidades.Usuario" />
		<mapping class="br.com.nce.neoescola.banco.entidades.Colaborador" />
		<mapping class="br.com.nce.neoescola.banco.entidades.Aluno" />
		
		
		
	</session-factory>
</hibernate-configuration>